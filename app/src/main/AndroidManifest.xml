<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mycompany.newchatapp">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".OfflineCapabilities"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="q">
        <activity android:name=".Activities.ScheduleMessage"></activity>
        <activity
            android:name=".Activities.GroupChat"
            android:theme="@style/AppTheme.Mytheme" />
        <activity android:name=".Activities.ManageBlockedUser" />
        <activity android:name=".Activities.ViewFriendProfile" />
        <activity
            android:name=".Activities.ChatRoom"
            android:theme="@style/AppTheme.Mytheme" />
        <activity android:name=".Activities.CreateGroup" />
        <activity android:name=".Activities.CreateRoom" />
        <activity android:name=".Activities.ViewMedia" />
        <activity android:name=".Activities.EditProfile" />
        <activity android:name=".Activities.AboutActivity" />
        <activity android:name=".Activities.SettingActivity" />
        <activity android:name=".Activities.ProfileActivity" />
        <activity
            android:name=".Activities.ChatActivity"
            android:theme="@style/AppTheme.Mytheme" />
        <activity android:name=".Activities.UserDetailsActivity" />
        <activity android:name=".Activities.MainScreen" />
        <activity android:name=".Activities.VerifyOTP" />
        <activity android:name=".Activities.RegisterPhoneNumber" />
        <activity
            android:name=".Activities.SplashScreen"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>